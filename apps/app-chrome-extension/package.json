{
  "name": "@graffmesh/app-chrome-extension",
  "version": "1.9.0",
  "description": "P2P Annotation Chrome extension",
  "author": "Lireproof",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "yarn setup && vite build",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist",
    "typecheck": "tsc --pretty --noEmit -p ./tsconfig.json",
    "storybook": "storybook dev -p 6006",
    "test-storybook": "test-storybook --url http://localhost:6006",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"yarn build-storybook --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && yarn test-storybook\"",
    "build-storybook": "storybook build",
    "test": "vitest",
    "setup": "yarn setup:development",
    "setup:development": "cross-env BUILD_ENV=\"dev\" cp dotenv.development .env",
    "setup:staging": "cross-env BUILD_ENV=\"local\" cp dotenv.staging .env",
    "setup:production": "cross-env BUILD_ENV=\"production\" cp dotenv.production .env"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "styled-components": "^6.1.14"
  },
  "devDependencies": {
    "@storybook/react": "^8.4.7",
    "@types/chrome": "^0.0.297",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "cross-env": "^7.0.3",
    "dotenv-expand": "^12.0.1",
    "path": "^0.12.7",
    "storybook": "^8.4.7",
    "terser": "^5.37.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "unplugin-auto-import": "^19.0.0",
    "url": "^0.11.4",
    "vite": "^6.0.7",
    "vitest": "^3.0.2"
  }
}
